@model IEnumerable<CitelTeste.WebAppCitelTeste.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Lista de Categorias</h1>
</br>
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="AdicionarProduto">Adicionar produto</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-secondary" asp-controller="Categoria" asp-action="EditarCategoria" asp-route-data="item.Id">Editar</a>
                            <a role="button" class="btn btn-danger" id="btnExcluir" asp-controller="Categoria" asp-action="ExcluirCategoria">Excluir</a>
                    </div>1
                </td>
            </tr>
        }
    </tbody>
</table>
